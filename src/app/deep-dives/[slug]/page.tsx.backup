        setIsCompleted(true);
      }
    } catch (error) {
      console.error('Error completing deep dive:', error);
    }
  };

  useEffect(() => {
    // Simulate loading
    const timer = setTimeout(() => {
      const data = deepDives[params.slug as keyof typeof deepDives];
      if (data) {
        setDeepDive(data);
      }
      setLoading(false);
    }, 500);

    return () => clearTimeout(timer);
